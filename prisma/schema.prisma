generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
	id 					Int				@id @default(autoincrement())
	createdAt 	DateTime 	@default(now())
	updatedAt 	DateTime 	@default(now())

	email 			String 		@unique
	hash 				String
	hashedRt 		String?

	username 		String
	firstname 	String?
	lastname  	String?
	role				Role			@default(CITIZEN)
	acceptRgpd 	Boolean		@default(false)

	@@map("users")
}

enum Role {
	SUPER_ADMIN
	ADMIN
	MODERATOR
	CITIZEN
}